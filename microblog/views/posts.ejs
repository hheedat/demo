<% posts.forEach(function(post, index) { 
  if (index % 3 == 0) { %>
  <div class="row">
<%} %>
	  <div class="weibo">
	    <h2><a href="/u/<%= post.user %>"><%= post.user +' :'%></a></h2>
	    <div class="w-detail">
	    	<p><%= post.post %></p>
	    	<p><span><%= post.time.getFullYear()+'年'+post.time.getMonth()+'月'+post.time.getDate()+'日  '+post.time.toLocaleTimeString() %></span></p>
	    </div>
	  </div>
<% if (index % 3 == 2) { %>
  </div><!-- end row -->
<% } %>
<%}) %>
<% if (posts.length % 3 != 0) { %>
  </div><!-- end row -->
<% } %>
